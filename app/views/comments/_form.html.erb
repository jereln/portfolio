  <%= f.label :author_email, 'Your Email' %><br>
  <%= f.text_field :author_email %>
</div>
<div class="field">
  <%= f.label :author_url, 'Your URL' %><br>
  <%= f.text_field :author_url %>
</div>
<div class="field">
  <%= f.label :content, 'Your Comment' %><br>
  <%= f.text_area :content %>
</div> 
<div class="actions">
  <%= f.submit 'Submit comment for approval' %>
</div>
<% end %>